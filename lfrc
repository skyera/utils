# .config/lf/lfrc

set shell bash
#map e $vim $f
map i $bat --paging=always $f
cmd doc $lf -doc | bat -p

set incsearch true
set number true
set preview true
set previewer ~/bin/lf-preview.sh
set drawbox true
map <m-1> select
cmd fzf_find $~/bin/fzf_find.sh
map zz :fzf_find

# https://github.com/gokcehan/lf/blob/master/etc/icons.example
set icons true
# set iconfile ~/.config/lf/icons

